            //money they lost
            System.out.println("The money you eliminated is $" + cases[pickcase]);
            //marking case 
            caseNum[pickcase] = "x";
            System.out.println("These are the cases left");
            for (int i2 = 0; i2 < caseNum.length; i2++) {
                System.out.print(caseNum[i2] + ", ");
            }
        }
